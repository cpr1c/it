Функция СписокОтчетовПоРаботеGET(Запрос)
	ПараметрыЛога = ВнешнийПрограммныйИнтерфейс.НовыеПараметрыЛогаHTTPЗапроса(Запрос);
	Если Не ВнешнийПрограммныйИнтерфейс.ВнешнийПрограммныйИнтерфейсВключен() Тогда
		Возврат ВнешнийПрограммныйИнтерфейс.ОтветСервисаПриОтключенномПрограммномИнтерфейсе(ПараметрыЛога);
	КонецЕсли;
	
	ФильтрПоВыставленным = Ложь;
	Выставленные = Ложь;
	Если Запрос.ПараметрыЗапроса.Получить("invoice")<>Неопределено Тогда
		ФильтрПоВыставленным =  Истина;
		Выставленные =  Булево(Запрос.ПараметрыЗапроса["invoice"]);
	КонецЕсли;         
	
	ФильтрПоСтатусу = Ложь;
	Утвержденные = Ложь;
	Если Запрос.ПараметрыЗапроса.Получить("approved")<>Неопределено Тогда
		ФильтрПоСтатусу =  Истина;
		Утвержденные =  Булево(Запрос.ПараметрыЗапроса["approved"]);
	КонецЕсли;         
	
	Запрос = Новый Запрос;
	Запрос.Текст = 
	"ВЫБРАТЬ
	|	ОтчетПоРаботамПартнеру.Ссылка КАК Ссылка
	|ИЗ
	|	Документ.ОтчетПоРаботамПартнеру КАК ОтчетПоРаботамПартнеру
	|ГДЕ
	|	ОтчетПоРаботамПартнеру.Проведен
	|	И ВЫБОР
	|			КОГДА &ФильтрПоВыставленным
	|				ТОГДА ОтчетПоРаботамПартнеру.Выставлен = &Выставлен
	|			ИНАЧЕ ИСТИНА
	|		КОНЕЦ
	|	И ВЫБОР
	|			КОГДА &ФильтрПоСтатусу
	|				ТОГДА ОтчетПоРаботамПартнеру.Статус = &Статус
	|			ИНАЧЕ ИСТИНА
	|		КОНЕЦ";
	Запрос.УстановитьПараметр("ФильтрПоВыставленным", ФильтрПоВыставленным);
	Запрос.УстановитьПараметр("Выставлен", Выставленные);
	
	Запрос.УстановитьПараметр("ФильтрПоСтатусу", ФильтрПоСтатусу);
	Если Утвержденные Тогда
		Запрос.УстановитьПараметр("Статус", Перечисления.СтатусыОтчетовПоРаботамПартнеру.Утвержден);
	Иначе
		Запрос.УстановитьПараметр("Статус", Перечисления.СтатусыОтчетовПоРаботамПартнеру.Формируется);
	КонецЕсли;
	
	ЕстьОшибки = Ложь;
	МассивДанных = Новый Массив;
	
	Выборка = Запрос.Выполнить().Выбрать();
	Пока Выборка.Следующий() Цикл
		МассивДанных.Добавить(ВнешнийПрограммныйИнтерфейс.ОписаниеОтчетаПоРаботамПартнеру(Выборка.Ссылка, Ложь));
	КонецЦикла;
	
	Возврат ВнешнийПрограммныйИнтерфейс.ОтветСервиса(ЕстьОшибки, МассивДанных, ПараметрыЛога);
КонецФункции

